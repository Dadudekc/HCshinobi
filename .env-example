# === Discord Bot Configuration ===
DISCORD_BOT_TOKEN=your_bot_token_here
APPLICATION_ID=your_application_id_here
DISCORD_GUILD_ID=your_guild_id_here

# === Channel Configuration ===
ANNOUNCEMENT_CHANNEL_ID=your_announcement_channel_id
BATTLE_CHANNEL_ID=your_battle_channel_id
ONLINE_CHANNEL_ID=your_online_channel_id
DISCORD_WEBHOOK_URL=your_webhook_url_here

# === AI / LLM Configuration ===
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral
PRIMARY_AI_PROVIDER=openai  # openai | ollama | local

# === Runtime / Debug Options ===
DEBUG_MODE=false
LOG_LEVEL=INFO
MAINTENANCE_MODE=false

# === File and Memory Paths ===
DATA_DIR=data
CHARACTER_DB=characters.json
MEMORY_DB=memory_store.json
LOG_DIR=logs

# === Optional Web GPT Fallback ===
OPENAI_COOKIE_PATH=/path/to/cookies.sqlite
OPENAI_CHROME_PROFILE_PATH=/path/to/chrome/profile
OPENAI_TARGET_GPT_URL=https://chat.openai.com/
OPENAI_HEADLESS=false
